@model Videl.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDay)
        @Html.TextBoxFor(c => c.Customer.BirthDay, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(c => c.Customer.MemberShipType)
        @Html.DropDownListFor(c => c.Customer.MemberShipTypeId, new SelectList (Model.MemberShipType, "Id", "Name"),"" , new { @class = "form-control" })
    </div>

    <br />
    <div>
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribeToNewsLetter) Subscribe to news letter
        </label>
    </div>
    <br />

    @Html.HiddenFor(c => c.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

