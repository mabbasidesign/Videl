@model IEnumerable<Videl.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of movies</h2>

@Html.ActionLink("New Movie", "Create", "Movie", null, new { @class="btn btn-success"})

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th><h4>Movie</h4></th>
            <th><h4>Genre</h4></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Details", new {id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>

