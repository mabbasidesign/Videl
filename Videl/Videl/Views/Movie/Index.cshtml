@model IEnumerable<Videl.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of movies</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th><h4>Movie</h4></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
    </tbody>
</table>

